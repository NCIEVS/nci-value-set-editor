<?xml version="1.0"?>
<web-app version="2.5"
         xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">

    <session-config>
        <session-timeout>120</session-timeout>
    </session-config>

    <context-param>
        <param-name>javax.faces.STATE_SAVING_METHOD</param-name>
        <param-value>server</param-value>
    </context-param>

    <context-param>
        <param-name>javax.faces.CONFIG_FILES</param-name>
        <param-value>/WEB-INF/faces-config.xml</param-value>
    </context-param>

    <listener>
        <listener-class>com.sun.faces.config.ConfigureListener</listener-class>
    </listener>

    <servlet>
       <servlet-name>Log4JServlet</servlet-name>
       <servlet-class>gov.nih.nci.evs.valueseteditor.servlet.Log4JServlet</servlet-class>
       <load-on-startup>1</load-on-startup>
    </servlet>


    <!-- Faces Servlet -->

    <!-- servlet>
         <servlet-name>Faces Servlet</servlet-name>
         <servlet-class>gov.nih.nci.evs.browser.servlet.AFacesServlet</servlet-class>
         <init-param>
           <param-name>errorPage</param-name>
           <param-value>/pages/error_handler.jsf</param-value>
         </init-param>
         <load-on-startup>-1</load-on-startup>
    </servlet -->

    <servlet>
        <servlet-name>FacesServlet</servlet-name>
        <servlet-class>javax.faces.webapp.FacesServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>

    <!-- Faces Servlet Mapping -->

    <servlet-mapping>
        <servlet-name>FacesServlet</servlet-name>
        <url-pattern>*.jsf</url-pattern>
    </servlet-mapping>

    <!--  Log4j init servlet -->


    <!-- Internal server error -->

    <error-page>
       <error-code>500</error-code>
       <location>/pages/errorPage.xhtml</location>
    </error-page>

    <!-- All exceptions -->

    <error-page>
       <exception-type>java.lang.Throwable</exception-type>
       <location>/pages/errorPage.xhtml</location>
    </error-page>
    
    
</web-app>
